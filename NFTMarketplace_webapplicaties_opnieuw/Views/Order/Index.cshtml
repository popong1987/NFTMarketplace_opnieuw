@model NFTMarketplace_webapplicaties_opnieuw.Viewmodels.OrderOverviewViewModel;
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1 class="mt-5">@ViewData["Title"]</h1>


<table class="table table-dark text-primary">
    
    @foreach (var product in Model.OrderProducten)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.Product.Naam</td>
            <td>@product.Product.Prijs</td>
        </tr>
    }
</table>

<h2>@Model.TotalePrijs</h2>
<form asp-controller="Order" asp-action="Pay">
    <input type="hidden" asp-for="OrderId" />
    <input type="submit" value="Pay" class="btn btn-primary" />
</form>


