@model NFTMarketplace_webapplicaties_opnieuw.Viewmodels.GebruikerListViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <h1 class="text-primary mb-4">Users<a class="btn btn-outline-primary ml-4" asp-controller="Admin" asp-action="Index">Back</a></h1>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row mb-4">
    <div class="col-md-4">
      <div class="row">
          <div class="col-md">
                <a class="btn btn-primary btn-block" asp-action="Create">Create New</a>
          </div>
          <div class="col-md">
                <a class="btn btn-primary btn-block" asp-action="GrantPermissions">Change Roles</a>
          </div>
      </div>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4"></div>
</div>


<table class="table table-dark text-primary mt-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(g => g.Gebruikers[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(g => g.Gebruikers[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(g => g.Gebruikers[0].Naam)
            </th>
            <th>
                @Html.DisplayNameFor(g => g.Gebruikers[0].Geboortedatum)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var gebruiker in Model.Gebruikers){

            <tr>
                <td>@Html.DisplayFor(modelItem => gebruiker.Id)</td>
                <td>@Html.DisplayFor(modelItem => gebruiker.UserName)</td>
                <td>@Html.DisplayFor(modelItem => gebruiker.Naam)</td>
                <td>@Html.DisplayFor(modelItem => gebruiker.Geboortedatum)</td>
                <td>
                    <a class="button" asp-action="Edit" asp-route-id="@gebruiker.Id">Edit</a>
                </td>
                <td>
                    <a class="button" asp-action="Details" asp-route-id="@gebruiker.Id">Details</a>
                </td>
                <td>
                    <a class="button" asp-action="Delete" asp-route-id="@gebruiker.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
