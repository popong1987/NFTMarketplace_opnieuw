@model NFTMarketplace_webapplicaties_opnieuw.Viewmodels.GrantPermissionsViewModel

@{
    ViewData["Title"] = "Grant Permission";
}

<form asp-action="GrantPermissions">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <select asp-for="GebruikerId" asp-items="Model.Gebruikers"></select>
    </div>
    <div class="form-group">
        <select asp-for="RolId" asp-items="Model.Rollen"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>